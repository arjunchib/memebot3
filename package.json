{
  "name": "memebot",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun --hot ./src/index.ts",
    "db": "drizzle-kit",
    "seed": "bun ./src/seed.ts",
    "build": "bun build ./src/index.ts --compile --target=bun-linux-x64-modern --outfile mb-serve && bun build ./src/seed.ts --compile --target=bun-linux-x64-modern --outfile mb-seed",
    "deploy": "rsync -azP --delete --include='mb-seed' --include='mb-serve' --include='memebot-legacy.sqlite' --include='drizzle' --include='drizzle.config.ts' --exclude='*' ./ atl1:~/memebot/"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/byte-size": "^8.1.2",
    "better-sqlite3": "^9.6.0",
    "drizzle-kit": "^0.23.0"
  },
  "peerDependencies": {
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.600.0",
    "byte-size": "^8.1.1",
    "drizzle-orm": "^0.32.0",
    "peach": "link:peach"
  }
}
